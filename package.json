{
  "name": "streamdesk",
  "version": "0.0.1",
  "description": "A specific HomeDesk installation to use the streamdeck device in my home office setup.",
  "main": "main.js",
  "author": "stefan@codingfragments.org",
  "license": "MIT",
  "private": false,
  "scripts": {
    "fullRebuild": "rm -rf node_modules && rm -rf lib/* && yarn install && yarn build ",
