    "@types/node": "^10.12.2",
    "@types/sharp": "^0.21.0",
    "tslint": "^5.11.0",
    "typescript": "^3.1.4"
  },
  "dependencies": {
    "elgato-stream-deck-clean": "^1.0.0",
    "sharp": "^0.21.0"
  },
  "resolutions": {
    "node-hid": "0.7.3"
  }
}